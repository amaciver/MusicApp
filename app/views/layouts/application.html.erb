<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <%= button_to "Sign Out", session_url, method: :delete %>
  <% end %>

  <% if flash[:errors] %>
    <div class="">
      <% flash[:errors].each do |error| %>
        <h2><strong><%= error %>!</strong></h2>
      <% end %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
