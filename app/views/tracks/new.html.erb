<%= link_to "Back to bands", bands_url %>

<form class="" action="<%=tracks_url%>" method="post">
  <%= auth_token %>

  <label for="Track Name">Track Name</label>
  <input id="Track Name" type="text" name="track[name]" value="">
  <br>

  <label for="Album">Album</label>
  <select id="Album" class="" name="track[album_id]">
    <option disabled selected value="">-Please Select-</option>
    <% Album.all.each do |album| %>
    <option value="<%= album.id %>"><%= album.title %></option>
    <% end %>
  </select>
  <br>

  <label for="track[bonus]">regular/bonus</label>
  <input type="radio" name="track[bonus]" value="regular" checked>
  <input type="radio" name="track[bonus]" value="bonus">
  <br>

  <label>Lyrics
    <textarea name="track[lyrics]" cols="30" rows="10"></textarea>
  </label>
  <br>

  <input type="submit" name="" value="Create Track">
</form>
